<h4>Title: <%= @task.title %></h4>
<p>Details: <%= @task.details %></p>
<p>Completed: <%= @task.completed ? "Yes" : "No"  %></p>

<%= link_to "Edit", edit_task_path(@task) %> | <%= link_to "Delete", delete_task_path(@task), data: { turbo_method: :delete, turbo_confirm: "Are you sure?"}  %> | <%= link_to "Back to tasks", tasks_path %>
